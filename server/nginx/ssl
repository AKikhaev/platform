ssl_certificate			/etc/letsencrypt/live/zvonkiidut.ru/fullchain.pem;
ssl_certificate_key		/etc/letsencrypt/live/zvonkiidut.ru/privkey.pem;
ssl_trusted_certificate	/etc/letsencrypt/live/zvonkiidut.ru/chain.pem;

ssl_ciphers EECDH:+AES256:-3DES:RSA+AES:RSA+3DES:!NULL:!RC4;

ssl_stapling on;
ssl_stapling_verify on;

ssl_session_cache   shared:SSL:10m;
ssl_session_timeout 5m;
ssl_prefer_server_ciphers on;
resolver 8.8.8.8;

# исключим возврат на http-версию сайта
add_header Strict-Transport-Security "max-age=31536000";

# явно "сломаем" все картинки с http://
#add_header Content-Security-Policy "block-all-mixed-content";

